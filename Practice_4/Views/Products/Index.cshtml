
@{
    ViewBag.Title = "Index";

}

@if (TempData["SuccessMessage"] != null)
{

    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <p>@TempData["SuccessMessage"]</p>

    </div>
    TempData.Remove("SuccessMessage");
}
@if (TempData["ErrorMessage"] != null)
{

<div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <p>@TempData["ErrorMessage"]</p>

</div>
    TempData.Remove("ErrorMessage");
}

<h2>Продукты</h2>

<div class="container">
    <div class="list-group">
        @if (((List<Practice_4.Models.BaseProduct>)ViewBag.BaseProducts).Count == 0)
        {
            <div class="list-group-item clearfix">
                <h3 class="text-danger">Коллекция подуктов пуста</h3>
            </div>
        }
        else
        {
            foreach (Practice_4.Models.BaseProduct product in ViewBag.BaseProducts)
            {
                <div class="list-group-item clearfix">
                    @product.Name
                    <span class="pull-right">
                        @Html.ActionLink("Подробности", "Details", "BaseProduct", new { id = product.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Редактировать", "Edit", "BaseProduct", new { id = product.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Удалить", "Delete", "BaseProduct", new { id = product.Id }, new { @class = "btn btn-danger", @onclick = "return confirm('Вы действительно хотите удалить продукт ?')" })
                    </span>
                </div>
            }
        }
        <div class="list-group-item">
            @Html.ActionLink("Добавить", "Create", "BaseProduct", null, new { @class = "btn btn-success " })
        </div>
    </div>
</div>

